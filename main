						}
					}
				}
					
			}else{
				SetConsoleTextAttribute(hConsole, FOREGROUND_BLUE | FOREGROUND_INTENSITY);
				cout << "Movimento invalido!"<<endl;
				SetConsoleTextAttribute(hConsole, saved_colors);
			}
		}		
		//rei branco
    	if (grade2[x-1][y-1]==82){
    		cin >>tempx>>tempy;
    		if (tempx<1||tempx>8||tempy<1||tempy>8||(grade2[tempx-1][tempy-1]<100&&grade2[tempx-1][tempy-1]!=46)){
    			SetConsoleTextAttribute(hConsole, FOREGROUND_BLUE | FOREGROUND_INTENSITY);
				cout << "Movimento invalido!"<<endl;
				SetConsoleTextAttribute(hConsole, saved_colors);
			}else if ((tempx==x&&(tempy==y+1||tempy==y-1))||(tempy==y&&(tempx==x-1||tempx==x+1))||(tempx==x-1&&(tempy==y-1||tempy==y+1))||(tempx==x+1&&(tempy==y+1||tempy==y-1))){
				grade[x-1][y-1]='.';
    			grade[tempx-1][tempy-1]='R';
    			grade2[tempx-1][tempy-1]=82;
    			grade2[x-1][y-1]='.';
    			jogador=true;
			}else{
				SetConsoleTextAttribute(hConsole, FOREGROUND_BLUE | FOREGROUND_INTENSITY);
				cout << "Movimento invalido!"<<endl;
				SetConsoleTextAttribute(hConsole, saved_colors);
			}
		}
		}
    	
    	//check de reis
    	white=false;
		blue=false;	
    	for (int i=0; i<8; i++){
        	for (int j=0; j<8; j++){
        		if (grade2[j][i]==182){
        			blue=true;
				}
				if (grade2[j][i]==82){
					white=true;
				}
			}
		}
		//vez de quem
		cout<<endl;
		if (jogador){
			SetConsoleTextAttribute(hConsole, FOREGROUND_BLUE | FOREGROUND_INTENSITY);
			cout<<"Vez dos Azuis!"<<endl<<endl;
			SetConsoleTextAttribute(hConsole, saved_colors);
		}else{
			cout<<"Vez dos Brancos!"<<endl<<endl;
		}
		//cout do campo
    	for (int i=0; i<8; i++){
			cout <<ord<<" ";
			ord++;
        	for (int j=0; j<8; j++){
        		if (grade2[j][i]>100){
        			SetConsoleTextAttribute(hConsole, FOREGROUND_BLUE | FOREGROUND_INTENSITY);
        			cout<<grade[j][i]<<" ";
        			SetConsoleTextAttribute(hConsole, saved_colors);
				}else{
					cout<<grade[j][i]<<" ";
				}
        	}
        	cout << endl;
        	if (i==7){
        		cout<< "  1 2 3 4 5 6 7 8"<<endl<<endl;
			}
        }    
        //quem ganhou
        if (!blue){
			cout<<"Branco ganhou!"<<endl;
			break;	
		}else if(!white){
			SetConsoleTextAttribute(hConsole, FOREGROUND_BLUE | FOREGROUND_INTENSITY);
			cout<<"Azul ganhou!"<<endl;
			SetConsoleTextAttribute(hConsole, saved_colors);
			break;	
		}
    }	
}
